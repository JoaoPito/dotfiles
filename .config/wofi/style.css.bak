
window {
    margin: 0px;
    border: 5px solid #1e1e2e;
    background: transparent;
    background-color: alpha(#cdd6f4,0.1);
    border-radius: 26px;
}

#input {
    padding: 4px;
    margin: 4px;
    padding-left: 20px;
    border: none;
    color: #cdd6f4;
    font-weight: bold;
    background-color: #1e1e2e;
   	outline: none;
    border-radius: 12px;
    margin: 10px;
    margin-bottom: 2px;
}
#input:focus {
    border: 0px solid #1e1e2e;
    margin-bottom: 0px;
}

#inner-box {
    margin: 4px;
    border: 0px solid #1e1e2e;
    color: #cdd6f4;
    font-weight: bold;
    /*background-color: #1e1e2e;*/
    border-radius: 12px;
}

#outer-box {
    margin: 0px;
    border: none;
    border-radius: 12px;
    /*background-color: #1e1e2e;*/
}

#scroll {
    margin-top: 5px;
    border: none;
    border-radius: 12px;
    margin-bottom: 5px;
    /* background: rgb(255,255,255); */
}

#img:selected {
    background-color: #89b4fa;
    border-radius: 12px;
}

#text:selected {
    color: #cdd6f4;
    margin: 0px 0px;
    border: none;
    border-radius: 12px;
    background-color: #89b4fa;
}

#entry {
    margin: 0px 0px;
    border: none;
    border-radius: 12px;
    background-color: transparent;
}

#entry:selected {
    margin: 0px 0px;
    border: none;
    border-radius: 12px;
    background-color: #89b4fa;
}
